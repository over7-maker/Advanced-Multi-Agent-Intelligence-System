[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    venv,
    build,
    dist,
    .eggs,
    *.egg,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .coverage,
    htmlcov,
    docs/_build,
    node_modules,
    migrations,
    .github/workflows,
    .vscode,
    .idea

# Additional configurations
max-complexity = 10
statistics = True
count = True

# Ignore specific error codes
# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
# E501: line too long (handled by Black)
extend-ignore = E203, W503, E501

# Per-file ignores
per-file-ignores =
    # Test files can have longer lines and use assert
    tests/*:E501,F401
    # Scripts can have longer lines
    scripts/*:E501
    # Init files can have unused imports
    __init__.py:F401
    # Security test files contain intentional vulnerabilities
    .github/scripts/verify_security_fixes.py:S105,S106,S107
    .github/scripts/simple_verify_fixes.py:S105