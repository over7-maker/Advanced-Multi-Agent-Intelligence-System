# AMAS Web Dashboard Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Authentication
REACT_APP_AUTH_ENABLED=true
# DO NOT COMMIT SECRETS TO VERSION CONTROL
# Provide your token via local .env (left empty by default)
REACT_APP_AUTH_TOKEN=

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_WS_RECONNECT_INTERVAL=5000

# Feature Flags
REACT_APP_VOICE_COMMANDS_ENABLED=true
REACT_APP_REAL_TIME_UPDATES=true
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_DEBUG_MODE=false

# Usage
# Copy this file to .env and fill in actual values locally.
# .env should not be committed.

# UI Configuration
REACT_APP_THEME=dark
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=UTC

# Development
REACT_APP_DEV_MODE=false
REACT_APP_MOCK_API=false
