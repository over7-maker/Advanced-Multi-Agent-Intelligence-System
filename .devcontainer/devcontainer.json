{
  "name": "AMAS Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        // "ms-python.black-formatter", // Deprecated - Black is integrated in main Python extension
        "ms-python.isort",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      }
    }
  },

  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt -r requirements-dev.txt",
  
  "remoteUser": "vscode",
  
  // Proxy mount removed - add back if needed with proper postCreateCommand handling
  // "mounts": [
  //   "source=${localWorkspaceFolder}/.devcontainer/proxy,destination=/tmp/proxy,type=bind,consistency=cached"
  // ],

  "forwardPorts": [
    8000,
    8080,
    5432,
    6379,
    7687,
    8181
  ],

  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Dashboard",
      "onAutoForward": "silent"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "AMAS_ENV": "development"
  }
}
