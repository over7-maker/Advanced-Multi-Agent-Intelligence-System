{
  "name": "AMAS Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.isort",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll": false
        },
        "python.linting.enabled": true
      }
    }
  },

  "postCreateCommand": "pip install --no-input --progress-bar off -r requirements.txt -r requirements-dev.txt && echo '? Dependencies installed successfully.' || echo '? Dependency install failed.'; python -c \"import sys; print(f'Python {sys.version}')\"",
  
  "remoteUser": "vscode",
  
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
  "onCreateCommand": "cp .env.example .env 2>/dev/null || echo 'No .env.example found (optional)'",

  "forwardPorts": [
    8000,
    8080,
    5432,
    6379,
    7687,
    8181
  ],

  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Dashboard",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "ignore"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "ignore"
    },
    "7687": {
      "label": "Neo4j Bolt",
      "onAutoForward": "notify"
    },
    "8181": {
      "label": "OPA (Policy Engine)",
      "onAutoForward": "notify"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "AMAS_ENV": "development"
  }
}
