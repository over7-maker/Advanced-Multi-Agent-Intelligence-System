{
  "name": "AMAS Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "_comment": "Dev container for AMAS: FastAPI + PostgreSQL + Redis + Neo4j + OPA. Scripts in .devcontainer/setup.sh handle service initialization.",
  

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.isort",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/venv/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll": true
        },
        "python.linting.enabled": true
      }
    }
  },

  "postCreateCommand": ".devcontainer/setup.sh postCreate",
  
  "remoteUser": "vscode",
  
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
  "mounts": [
    "source=pip-cache,target=/home/vscode/.cache/pip,type=volume"
  ],
  
  "onCreateCommand": ".devcontainer/setup.sh onCreate",
  
  "updateContentCommand": ".devcontainer/setup.sh updateContent",

  "forwardPorts": [
    8000,
    8080
  ],

  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Dashboard",
      "onAutoForward": "silent"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "AMAS_ENV": "development"
  }
}
