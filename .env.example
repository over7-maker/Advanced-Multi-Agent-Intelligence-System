# AMAS Environment Configuration Example
# Copy this file to .env and fill in your values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Provider Keys (all can use OpenRouter)
DEEPSEEK_API_KEY=${OPENROUTER_API_KEY}
GLM_API_KEY=${OPENROUTER_API_KEY}
GROK_API_KEY=${OPENROUTER_API_KEY}
KIMI_API_KEY=${OPENROUTER_API_KEY}
QWEN_API_KEY=${OPENROUTER_API_KEY}
GPTOSS_API_KEY=${OPENROUTER_API_KEY}

# Database Configuration
AMAS_DB_HOST=localhost
AMAS_DB_PORT=5432
AMAS_DB_USER=amas
AMAS_DB_PASSWORD=your_password_here
AMAS_DB_NAME=amas

# Redis Configuration
AMAS_REDIS_HOST=localhost
AMAS_REDIS_PORT=6379
AMAS_REDIS_DB=0

# Neo4j Configuration
AMAS_NEO4J_URI=bolt://localhost:7687
AMAS_NEO4J_USERNAME=neo4j
AMAS_NEO4J_PASSWORD=your_neo4j_password

# Security
AMAS_JWT_SECRET=your_jwt_secret_key_here
AMAS_ENCRYPTION_KEY=your_encryption_key_here

# Environment
AMAS_ENVIRONMENT=development
AMAS_DEBUG=true
AMAS_LOG_LEVEL=INFO

# API Configuration
AMAS_API_HOST=0.0.0.0
AMAS_API_PORT=8000
AMAS_API_WORKERS=4

# N8N Integration (optional)
AMAS_N8N_URL=http://localhost:5678
AMAS_N8N_API_KEY=optional_n8n_key

# Monitoring (optional)
AMAS_PROMETHEUS_ENABLED=true
AMAS_PROMETHEUS_PORT=9090