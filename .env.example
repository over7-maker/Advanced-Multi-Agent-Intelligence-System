# AMAS Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
AMAS_ENVIRONMENT=development
AMAS_DEBUG=true
AMAS_OFFLINE_MODE=false
AMAS_GPU_ENABLED=false

# ============================================================================
# MINIMAL CONFIGURATION MODES
# ============================================================================
# Choose your configuration mode:
# - basic: 3 API keys (DEEPSEEK, GLM, GROK)
# - standard: 4 API keys (+ KIMI)
# - full: 6 API keys (+ QWEN, GPTOSS)
AMAS_CONFIG_MODE=basic

# ============================================================================
# AI PROVIDER API KEYS
# ============================================================================

# Basic Mode - Required (3 keys)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GLM_API_KEY=your_glm_api_key_here
GROK_API_KEY=your_grok_api_key_here

# Standard Mode - Optional (1 additional key)
KIMI_API_KEY=your_kimi_api_key_here

# Full Mode - Optional (2 additional keys)
QWEN_API_KEY=your_qwen_api_key_here
GPTOSS_API_KEY=your_gptoss_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL
AMAS_DB_HOST=localhost
AMAS_DB_PORT=5432
AMAS_DB_USER=amas
AMAS_DB_PASSWORD=your_secure_password_here
AMAS_DB_NAME=amas

# Redis
AMAS_REDIS_HOST=localhost
AMAS_REDIS_PORT=6379
AMAS_REDIS_PASSWORD=your_redis_password_here
AMAS_REDIS_DB=0

# Neo4j
AMAS_NEO4J_URI=bolt://localhost:7687
AMAS_NEO4J_USER=neo4j
AMAS_NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
AMAS_JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
AMAS_ENCRYPTION_KEY=your_32_character_encryption_key_here
AMAS_AUDIT_ENABLED=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# PgAdmin (for development)
PGADMIN_PASSWORD=your_pgadmin_password_here

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
AMAS_MAX_WORKERS=4
AMAS_TASK_TIMEOUT=300
AMAS_RATE_LIMIT=100

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
AMAS_LOG_LEVEL=INFO
AMAS_LOG_FORMAT=json
AMAS_LOG_FILE=logs/amas.log

# ============================================================================
# MONITORING SETTINGS
# ============================================================================
AMAS_METRICS_ENABLED=true
AMAS_HEALTH_CHECK_INTERVAL=30
AMAS_PROMETHEUS_PORT=9090

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# For Basic Mode (minimal setup):
# - Set only DEEPSEEK_API_KEY, GLM_API_KEY, GROK_API_KEY
# - Set AMAS_CONFIG_MODE=basic
# - Leave other API keys empty

# For Standard Mode:
# - Add KIMI_API_KEY to basic mode
# - Set AMAS_CONFIG_MODE=standard

# For Full Mode:
# - Add QWEN_API_KEY and GPTOSS_API_KEY to standard mode
# - Set AMAS_CONFIG_MODE=full

# ============================================================================
# VALIDATION
# ============================================================================
# After setting up your .env file, validate it with:
# python scripts/validate_env.py --mode basic --verbose