# AMAS - Advanced Multi-Agent Intelligence System
# Environment Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AMAS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://amas:amas_password@localhost:5432/amas_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=amas_db
DATABASE_USER=amas
DATABASE_PASSWORD=amas_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# NEO4J CONFIGURATION
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=amas_neo4j_password

# =============================================================================
# AI API CONFIGURATION
# =============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Cohere
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# =============================================================================
# API SETTINGS
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# VECTOR DATABASE
# =============================================================================
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# LOGGING
# =============================================================================
LOG_DIR=./logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=amas.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development
DEVELOPMENT_MODE=true
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set to true for production
PRODUCTION_MODE=false
SSL_CERT_PATH=
SSL_KEY_PATH=