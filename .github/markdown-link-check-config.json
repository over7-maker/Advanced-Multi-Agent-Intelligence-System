{
  "ignorePatterns": [
    { "pattern": "^http://localhost" },
    { "pattern": "^mailto:" },
    { "pattern": "^.*/ARCHITECTURE\\.md$" },
    { "pattern": "^docs/troubleshooting\\.md$" }
  ],
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "5s",
  "timeout": "30s",
  "ignoreDirectory": [
    "backup_",
    "node_modules",
    ".git"
  ],
  "retryDelaySeconds": 10
}
