{
  "ignorePatterns": [
    {
      "pattern": "^http://localhost"
    },
    {
      "pattern": "^https://.*\\.github\\.io"
    },
    {
      "pattern": "^docs/troubleshooting\\.md$"
    },
    {
      "pattern": "^.*/ARCHITECTURE\\.md$"
    },
    {
      "pattern": "^mailto:"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/",
      "replacement": "{{BASEURL}}/"
    }
  ],
  "retryOn429": true,
  "retryCount": 2,
  "fallbackRetryDelay": "3s",
  "timeout": "15s",
  "ignoreDirectory": [
    "backup",
    "node_modules",
    ".git"
  ]
}
