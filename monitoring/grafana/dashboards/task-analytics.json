{
  "dashboard": {
    "title": "AMAS - Task Analytics",
    "tags": ["amas", "tasks", "analytics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Task Execution Duration (95th percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(amas_task_duration_seconds_bucket[5m]))",
            "legendFormat": "{{task_type}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Task Success Rate by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "amas_task_success_rate",
            "legendFormat": "{{task_type}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Task Quality Score",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "amas_task_quality_score",
            "legendFormat": "{{task_type}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Task Errors by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(amas_task_errors_total[5m])",
            "legendFormat": "{{task_type}} - {{error_type}}"
          }
        ]
      }
    ]
  }
}

