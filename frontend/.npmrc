# NPM Configuration for AMAS Frontend
# Ensures clean, reproducible builds in CI/CD

# Enable package-lock.json auto-generation
package-lock=true

# Use lockfile version 3 (npm 9+)
lockfile-version=3

# Strict peer dependency resolution
strict-peer-dependencies=false
legacy-peer-deps=false

# Save exact versions (not ranges)
save-exact=false

# Audit settings
audit=true
audit-level=moderate